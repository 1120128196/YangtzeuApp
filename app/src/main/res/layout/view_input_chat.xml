<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#545454"
            android:padding="@dimen/card_margin_10"
            android:text="@string/chat_friend"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#545454"
            android:paddingStart="@dimen/card_margin_10"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/card_margin_10"
            android:paddingBottom="@dimen/card_margin_10"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_margin_10"
            android:background="@drawable/ic_replay_bg">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/translate"
                android:digits="0123456789"
                android:hint="@string/input_friend_number"
                android:inputType="number"
                android:maxLength="9"
                android:padding="@dimen/card_margin_10"
                android:textSize="14sp" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>